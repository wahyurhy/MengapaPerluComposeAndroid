<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:paddingTop="40dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_sample_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/sample_1"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_sample_1_compose"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/sample_1_compose"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_sample_2_compose"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/sample_2_compose"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_sample_3_compose"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/sample_3_compose"
            android:textAllCaps="false" />

    </LinearLayout>

</ScrollView>
